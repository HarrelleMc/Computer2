#include<stdio.h>

//Write a program ask the user two integers then add, multiple, divide and subtract them
//Expected Output 1://
//Input any 2 integer: 16 4//
//ADD = 20//
//MUL = 64//
//DIV = 4//
//SUB =  12//
//---------------------------------------------------------//
//Expected Output 2://
//Input any 2 integer: 15 10//
//ADD = 25//
//MUL = 150//
//DIV = 1.5//
//SUB =  5//

int main()
{
  int num1, num2, sum;      //this is the decleration of virables//
  printf("Input any 2 integer: ");   //***//
scanf("%d %d", &num1, &num2);       //this is where the user ask the two integers//
  
  sum = num1 + num2;        //this is the calculation of addition//
  printf("ADD = %d", sum);
  
  sum = num1 * num2;        //this is the calculation of Subtraction//
  printf("\nMUL = %d", sum);
  
   sum = num1 / num2;       //this is the calculation of Multiplication//
  printf("\nDIV = %d", sum);
  
   sum = num1 - num2;       //this is the calculation of Division//
  printf("\nSUB = %d", sum);
  
  
  return 0;
}
