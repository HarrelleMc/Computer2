
#include <stdio.h> 
#include <stdlib.h>

int main()
{
	char name[50];
	int age, check;
	
	printf("Name: ");
	gets(name);
	
    printf ("Age: ");
    check = scanf ("%d", &age);
   
    

    
	if(!check){
       
      printf("Invalid Age. Please try again.");
     
     return 0;
  }
	 if (age <=17)
    {

      printf ("You are not eligible for voting.");
    }
    
  else if (age >= 18)
    {

      printf("You are eligible for voting.");
    }
	return 0;
}
